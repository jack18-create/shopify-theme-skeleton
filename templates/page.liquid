{% comment %}
  Template for Currency Converter
{% endcomment %}

{% assign exchange_rate = '6.9' %} {# Valor inicial de ejemplo #}

<div id="currency-converter">
  <h1>Convertidor de Pesos Chilenos a Bolivianos</h1>
  <label for="clp">Pesos Chilenos (CLP):</label>
  <input type="number" id="clp" name="clp">
  
  <label for="bob">Bolivianos (BOB):</label>
  <input type="number" id="bob" name="bob" readonly>
  
  <button onclick="convertCurrency()">Convertir</button>
</div>

<script>
  const exchangeRate = {{ exchange_rate }};
  function convertCurrency() {
    const clp = document.getElementById('clp').value;
    const bob = (clp * exchangeRate).toFixed(2);
    document.getElementById('bob').value = bob;
  }
</script>

<style>
  #currency-converter {
    max-width: 400px;
    margin: auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  #currency-converter label, #currency-converter input, #currency-converter button {
    display: block;
    margin-bottom: 10px;
  }
  #currency-converter input {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
  }
</style>
